{
  "compilerOptions": {
    "target": "ES2020", // Specifies the ECMAScript target version
    "module": "commonjs", // Use CommonJS for compatibility with Node.js
    "rootDir": "src", // Root directory of TypeScript files
    "outDir": "dist", // Output directory for compiled JavaScript files
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Enables interoperability with CommonJS modules
    "forceConsistentCasingInFileNames": true, // Ensures consistent file name casing across the project
    "skipLibCheck": true, // Skip type checking of declaration files to improve build speed
    "resolveJsonModule": true, // Allows importing JSON files
    "noImplicitAny": true // Disallow `any` types unless explicitly specified
  },
  "include": ["src/**/*"], // Include all files in the src folder
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist folders
}
